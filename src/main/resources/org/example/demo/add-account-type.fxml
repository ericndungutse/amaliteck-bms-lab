<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="TOP_LEFT" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demo.HelloController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create / Edit Account Type" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Fixed Account Interest Rate:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="interestRateField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Min Balance Required:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <CheckBox fx:id="minBalanceRequiredCheckBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Minimum Balance:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="minBalanceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Overdraft Allowed:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <CheckBox fx:id="overdraftAllowedCheckBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Overdraft Limit:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="overdraftLimitField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Save Account Type" onAction="#handleSave" />

    <TextArea fx:id="outputArea" editable="false" prefRowCount="6" wrapText="true"/>
</VBox>
